@page
@model PRN221PE_SP24_TrialTest_SE160233_RazorPage.Pages.Account.LoginModel
@{
}
<div class="container border" style="padding:20px">
    <form method="post">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger">
                @Model.ErrorMessage
            </div>
        }
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credential.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.UserName" class="form-control"/>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Password" class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>