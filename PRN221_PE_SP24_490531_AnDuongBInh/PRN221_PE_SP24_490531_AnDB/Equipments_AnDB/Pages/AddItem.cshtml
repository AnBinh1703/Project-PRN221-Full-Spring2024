@page
@model Equipments_AnDB.Pages.AddItemModel

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="border p-4 col-md-8 mx-auto">
        <h1 class="text-center mb-4">ADDING ITEM</h1>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">ID</label>
                <input type="number" min="0" asp-for="Id" class="form-control" required />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">EqCode</label>
                <input type="number" min="0" asp-for="EqCode" class="form-control" required />
                <span asp-validation-for="EqCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">EqName</label>
                <input asp-for="EqName" class="form-control" required />
                <span asp-validation-for="EqName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Model</label>
                <input type="number" min="0" asp-for="Model" class="form-control" required />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">SupplierName</label>
                <input asp-for="SupplierName" class="form-control" required />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Price</label>
                <input asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" min="1" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Room</label>
                <select asp-for="RoomId" class="form-control">
                    @foreach (var item in Model.Rooms)
                    {
                        <option value="@item.RoomId">@item.RoomName</option>
                    }
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-primary">Add Item</button>
            </div>
        </form>
    </div>
</div>
